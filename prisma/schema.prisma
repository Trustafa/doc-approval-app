generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @db.Timestamptz()
  updatedAt DateTime  @updatedAt @db.Timestamptz()
  deletedAt DateTime? @db.Timestamptz()

  name           String
  email          String  @unique
  hashedPassword String
  disabled       Boolean @default(true)

  approvals   Approval[]
  requests    Request[]
  UserSession UserSession[]
  File        File[]
}

model UserSession {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now()) @db.Timestamptz()
  updatedAt DateTime  @updatedAt @db.Timestamptz()
  deletedAt DateTime? @db.Timestamptz()

  userId    Int
  active    Boolean   @default(true)
  expiresAt DateTime? @db.Timestamptz()
  ipAddress String?
  userAgent String?

  user User @relation(fields: [userId], references: [id])
}

model Approval {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @db.Timestamptz()
  updatedAt DateTime  @updatedAt @db.Timestamptz()
  deletedAt DateTime? @db.Timestamptz()

  approverId Int
  approver   User @relation(fields: [approverId], references: [id])

  requestId Int
  request   Request @relation("RequestApprovals", fields: [requestId], references: [id])

  decision        ApprovalDecision @default(PENDING)
  decisionAt      DateTime?        @db.Timestamptz()
  rejectionReason String?
}

model Request {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @db.Timestamptz()
  updatedAt DateTime  @updatedAt @db.Timestamptz()
  deletedAt DateTime? @db.Timestamptz()

  payee            String
  amount           Decimal   @db.Decimal(10, 2)
  currency         String
  approvalFileDate DateTime  @db.Timestamptz()
  title            String
  description      String?
  processedAt      DateTime? @db.Timestamptz()
  externalRef      String?
  internalRef      String?

  requesterId Int
  requester   User @relation(fields: [requesterId], references: [id])

  approvalFileId Int         @unique
  approvalFile   RequestFile @relation("ApprovalFile", fields: [approvalFileId], references: [id])

  supportingFiles RequestFile[] @relation("SupportingFile")
  approvals       Approval[]    @relation("RequestApprovals")
}

model RequestFile {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @db.Timestamptz()
  updatedAt DateTime  @updatedAt @db.Timestamptz()
  deletedAt DateTime? @db.Timestamptz()

  requestId Int
  request   Request @relation("SupportingFile", fields: [requestId], references: [id])

  fileId Int
  file   File @relation(fields: [fileId], references: [id])

  approvalOfRequest Request? @relation("ApprovalFile")
}

model File {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @db.Timestamptz()
  updatedAt DateTime  @updatedAt @db.Timestamptz()
  deletedAt DateTime? @db.Timestamptz()

  createdById Int
  createdBy   User @relation(fields: [createdById], references: [id])

  key         String  @unique
  filename    String
  mimeType    String?
  sizeInBytes Int

  RequestFile RequestFile[]
}

enum ApprovalDecision {
  APPROVED
  REJECTED
  PENDING
}
